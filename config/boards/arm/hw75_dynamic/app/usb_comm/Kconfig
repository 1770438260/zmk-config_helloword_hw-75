config HW75_USB_COMM
	bool
	depends on USB_DEVICE_DRIVER
	default y

if HW75_USB_COMM

config HW75_USB_COMM_MAX_TX_PACKET_SIZE
	int
	default 4096

config HW75_USB_COMM_MAX_RX_PACKET_SIZE
	int
	default 8192

module = HW75_USB_COMM
module-str = usb_comm
source "subsys/logging/Kconfig.template.log_config"

endif # HW75_USB_COMM
